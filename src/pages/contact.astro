---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact">
  <div class="container page-content">
    <div class="content-box">
      <h1>Contact WIAA</h1>
      
      <p class="intro">We'd love to hear from you! Whether you're interested in bringing WIAA programming to your school, have questions about our curriculum, or want to collaborate, please reach out.</p>

      <div class="contact-grid">
        <div class="contact-info">
          <h2>Get in Touch</h2>
          
          <div class="contact-item">
            <i class="fas fa-envelope"></i>
            <div>
              <h3>Email</h3>
              <a href="mailto:wiaa@iastate.edu">wiaa@iastate.edu</a>
            </div>
          </div>

          <div class="contact-item">
            <i class="fas fa-phone"></i>
            <div>
              <h3>Phone</h3>
              <p>(555) 123-4567</p>
            </div>
          </div>

          <div class="contact-item">
            <i class="fas fa-map-marker-alt"></i>
            <div>
              <h3>Address</h3>
              <p>716 Farm House Lane<br>Ames, Iowa 50011</p>
            </div>
          </div>

          <div class="contact-item">
            <i class="fas fa-university"></i>
            <div>
              <h3>Institution</h3>
              <p>Iowa State University<br>College of Agriculture and Life Sciences</p>
            </div>
          </div>
        </div>

        <div class="contact-form">
          <h2>Send Us a Message</h2>
          <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
            <div class="form-group">
              <label for="name">Name *</label>
              <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
              <label for="organization">School/Organization</label>
              <input type="text" id="organization" name="organization">
            </div>

            <div class="form-group">
              <label for="subject">Subject *</label>
              <select id="subject" name="subject" required>
                <option value="">Select a subject...</option>
                <option value="outreach">Request Outreach Program</option>
                <option value="curriculum">Curriculum Questions</option>
                <option value="collaboration">Collaboration Opportunity</option>
                <option value="other">Other Inquiry</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" rows="6" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
      </div>

      <div class="info-box">
        <h3>Office Hours</h3>
        <p>Monday - Friday: 8:00 AM - 5:00 PM CST</p>
        <p>We typically respond to inquiries within 1-2 business days.</p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .page-content {
    padding: 60px 20px;
  }

  .content-box {
    background: white;
    padding: 40px;
    border-radius: 8px;
    border: 1px solid var(--border-light);
    max-width: 1100px;
    margin: 0 auto;
  }

  .content-box h1 {
    margin-bottom: 20px;
    border-bottom: 2px solid var(--isu-gold);
    padding-bottom: 15px;
  }

  .intro {
    font-size: 1.1em;
    color: var(--text-medium);
    line-height: 1.8;
    margin-bottom: 40px;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  .contact-info h2,
  .contact-form h2 {
    color: var(--isu-red);
    font-size: 1.4em;
    margin-bottom: 25px;
  }

  .contact-item {
    display: flex;
    gap: 15px;
    margin-bottom: 25px;
    align-items: start;
  }

  .contact-item i {
    font-size: 1.5em;
    color: var(--isu-red);
    margin-top: 5px;
  }

  .contact-item h3 {
    font-size: 1em;
    color: var(--isu-red);
    margin: 0 0 5px 0;
  }

  .contact-item p,
  .contact-item a {
    margin: 0;
    color: var(--text-medium);
    line-height: 1.6;
  }

  .contact-item a:hover {
    color: var(--isu-red);
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--text-dark);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid var(--border-light);
    border-radius: 4px;
    font-family: inherit;
    font-size: 1em;
    transition: border-color 0.2s;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--isu-red);
  }

  .form-group textarea {
    resize: vertical;
  }

  .info-box {
    background: rgba(196, 30, 58, 0.05);
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid var(--isu-red);
  }

  .info-box h3 {
    color: var(--isu-red);
    margin: 0 0 10px 0;
  }

  .info-box p {
    margin: 5px 0;
    color: var(--text-medium);
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
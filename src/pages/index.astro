---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<BaseLayout title="Home">
  <div class="hero-section" style={`--hero-bg: url('${base}/images/Home.jpg')`}>
    <div class="container">
      <h1>Workforce in Agriculture and AI</h1>
      <p>Inspiring future leaders in science who are passionate about using AI and its applications in agricultural related problems.</p>
      <a href={base + '/drones'} class="btn btn-secondary">Start learning about drones</a>
    </div>
  </div>
  
  <div class="container page-content">
    <h2 class="section-title">Featured programs</h2>
    
    <div class="program-grid">
      <div class="program-card">
        <h3>Drone program</h3>
        <p>Understand drone parts, sensors, and AI applications in agriculture.</p>
        <a href={base + '/drones'} class="btn btn-primary">Learn More</a>
      </div>
      
      <div class="program-card">
        <h3>Outreach work</h3>
        <p>Previous outreach events and workshops.</p>
        <a href={base + '/outreach'} class="btn btn-primary">Learn More</a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .hero-section {
    color: white;
    padding: 100px 20px;
    text-align: center;
    border-radius: 8px;
    margin: 20px;
    background-size: cover;
    background-position: center;
  }
  
  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(rgba(196, 30, 58, 0.7), rgba(160, 24, 48, 0.7));
    z-index: 1;
  }
  
  .hero-section {
    position: relative;
    background-image: var(--hero-bg);
  }
  
  .hero-section > * {
    position: relative;
    z-index: 2;
  }
  
  .hero-section h1 {
    font-size: 3em;
    font-weight: 700;
    margin-bottom: 15px;
    color: white;
  }
  
  .hero-section p {
    font-size: 1.1em;
    max-width: 900px;
    margin: 0 auto 30px;
    opacity: 0.95;
    line-height: 1.6;
  }
  
  .page-content {
    padding: 60px 20px;
  }
  
  .section-title {
    text-align: center;
    margin-bottom: 40px;
    font-size: 1.9em;
    color: var(--isu-red);
  }
  
  .program-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    max-width: 900px;
    margin: 0 auto;
  }
  
  .program-card {
    background: white;
    padding: 40px;
    border-radius: 8px;
    border: 1px solid var(--border-light);
    border-left: 4px solid var(--isu-gold);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    text-align: center;
  }
  
  .program-card h3 {
    color: var(--isu-red);
    margin-bottom: 15px;
    font-weight: 500;
  }
  
  .program-card p {
    margin-bottom: 20px;
    color: var(--text-medium);
  }
  
  .coming-soon-text {
    color: var(--text-light);
  }
  
  .btn-disabled {
    background: #ccc;
    cursor: not-allowed;
  }
  
  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 2em;
    }
    .hero-section {
      padding: 60px 20px;
    }
    .program-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
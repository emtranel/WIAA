---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Sidebar from '../../../components/Sidebar.astro';
import LessonNav from '../../../components/LessonNav.astro';
import Quiz from '../../../components/Quiz.astro';

import quizRaw from '../../../../public/data/quizzes/05-ai-agriculture.json?raw';
const quizData = JSON.parse(quizRaw);

const chapter = 5;
const lesson = 4;
---

<BaseLayout title="Concept Review">
  <div class="container" style="max-width: 1400px; margin: 30px auto; padding: 0 20px;">
    <div style="display: grid; grid-template-columns: 250px 1fr; gap: 24px; align-items: start;">
      <Sidebar currentChapter={chapter} currentLesson={lesson} />
      <div class="content-area">
        <div class="content-header">
          <p class="chapter-label">Chapter {chapter}: AI in agriculture</p>
          <h1>Concept Review</h1>
        </div>
        <p>Test your understanding with the quiz below:</p>
        <Quiz questions={quizData} />
        <LessonNav 
          prev={{ href: '/drones/05-ai-agriculture/lesson-3', label: 'Previous' }}
          next={{ href: '/drones/06-faa-safety/lesson-1', label: 'Next' }}
          progress={`${chapter}.${lesson} / 7 Chapters`}
        />
      </div>
    </div>
  </div>
</BaseLayout>
<style>
  .lesson-container {
    max-width: 1400px;
    margin: 30px auto;
    padding: 0 15px;
    width: 100%;
  }

  .lesson-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    align-items: start;
  }

  .content-area {
    background: white;
    padding: 20px;
    border-radius: 8px;
    border: 1px solid var(--border-light);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    min-height: auto;
  }

  .content-header {
    border-bottom: 2px solid var(--isu-gold);
    padding-bottom: 16px;
    margin-bottom: 24px;
  }

  .chapter-label {
    color: var(--text-light);
    font-size: 0.8em;
    margin-bottom: 6px;
  }

  .content-header h1 {
    font-size: 1.4em;
    color: var(--isu-red);
    margin: 0;
  }

  /* Tablet screens */
  @media (min-width: 768px) {
    .lesson-container {
      padding: 0 20px;
    }

    .content-area {
      padding: 28px;
    }

    .content-header h1 {
      font-size: 1.7em;
    }
  }

  /* Desktop screens */
  @media (min-width: 969px) {
    .lesson-layout {
      grid-template-columns: 250px 1fr;
      gap: 24px;
    }

    .content-area {
      padding: 40px;
      min-height: 650px;
    }

    .content-header h1 {
      font-size: 2em;
    }
  }
</style>
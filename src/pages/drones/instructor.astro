<BaseLayout title="Instructor Resources">
  <div class="container">
    <div class="instructor-layout">
      <!-- Left Sidebar Navigation -->
      <aside class="instructor-sidebar">
        <h3>Quick Navigation</h3>
        <nav class="chapter-nav">
          {chapters.map(chapter => (
            <a 
              href={`#chapter-${chapter.num}`} 
              class="nav-link"
            >
              Chapter {chapter.num}: {chapter.title}
            </a>
          ))}
          <a href="#additional-resources" class="nav-link">
            Additional Resources
          </a>
        </nav>
      </aside>

      <!-- Main Content -->
      <div class="instructor-content">
        <div class="page-header">
          <h1>Instructor Resources</h1>
          <p>Comprehensive teaching materials, quiz answers, and downloadable resources for the drone curriculum.</p>
          <div class="tab-buttons">
            <a href="/WIAA/drones" class="tab-btn">Learning Module</a>
            <a href="/WIAA/drones/instructor" class="tab-btn active">Instructor Resources</a>
          </div>
        </div>

        <!-- Chapter-Specific Resources -->
        <div class="chapter-sections">
          {chapters.map(chapter => (
            <div class="chapter-section" id={`chapter-${chapter.num}`}>
              <h2>Chapter {chapter.num}: {chapter.title}</h2>
              
              {chapter.hasQuiz && chapter.quiz && (
                <div class="quiz-answers">
                  <h3><i class="fas fa-check-circle"></i> Quiz Answer Key</h3>
                  <div class="answer-list">
                    {chapter.quiz.map((question, idx) => (
                      <div class="answer-item">
                        <h4>Question {idx + 1}: {question.q}</h4>
                        <p class="correct-answer">
                          <strong>Correct Answer:</strong> {question.options[question.correct]}
                        </p>
                        <p class="explanation">
                          <strong>Explanation:</strong> {question.explain}
                        </p>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              
              {chapter.hasResources && (
                <div class="downloadable-resources">
                  <h3><i class="fas fa-download"></i> Downloadable Resources</h3>
                  <div class="resource-grid">
                    {instructorResources
                      .filter(r => r.chapter === chapter.num)
                      .flatMap(r => r.resources)
                      .map(resource => (
                        <div class="resource-card">
                          <div class="resource-icon">
                            <i class="fas fa-file-archive"></i>
                          </div>
                          <div class="resource-info">
                            <h4>{resource.title}</h4>
                            <p>{resource.description}</p>
                            <a href={resource.file} download class="btn btn-primary btn-sm">
                              <i class="fas fa-download"></i> Download
                            </a>
                          </div>
                        </div>
                      ))}
                  </div>
                </div>
              )}
              
              {!chapter.hasQuiz && !chapter.hasResources && (
                <p class="no-resources">No additional instructor resources for this chapter.</p>
              )}
            </div>
          ))}
        </div>

        <!-- Additional Resources Section -->
        <div class="additional-section" id="additional-resources">
          <h2><i class="fas fa-plus-circle"></i> Additional Resources</h2>
          <p class="section-description">
            Supplemental activities, extended lessons, and hands-on project materials.
          </p>
          <div class="resource-grid">
            {additionalResources.map(resource => (
              <div class="resource-card">
                <div class="resource-icon">
                  <i class="fas fa-file-archive"></i>
                </div>
                <div class="resource-info">
                  <h4>{resource.title}</h4>
                  <p>{resource.description}</p>
                  <a href={resource.file} download class="btn btn-primary btn-sm">
                    <i class="fas fa-download"></i> Download
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 1400px;
    margin: 30px auto;
    padding: 0 20px;
  }

  .instructor-layout {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 24px;
    align-items: start;
  }

  /* Sidebar Navigation */
  .instructor-sidebar {
    background: white;
    padding: 20px;
    border-radius: 8px;
    border: 1px solid var(--border-light);
    position: sticky;
    top: 90px;
    height: fit-content;
  }

  .instructor-sidebar h3 {
    color: var(--isu-red);
    margin-bottom: 15px;
    font-size: 1.1em;
    border-bottom: 2px solid var(--isu-gold);
    padding-bottom: 10px;
  }

  .chapter-nav {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .nav-link {
    padding: 10px 12px;
    background: #f5f5f5;
    border-radius: 4px;
    color: var(--text-dark);
    text-decoration: none;
    transition: all 0.2s;
    font-size: 0.9em;
    border-left: 3px solid transparent;
  }

  .nav-link:hover {
    background: var(--isu-red);
    color: white;
    border-left-color: var(--isu-gold);
  }

  /* Main Content */
  .instructor-content {
    min-width: 0;
  }

  .page-header {
    background: white;
    padding: 30px;
    border-radius: 8px;
    border: 2px solid var(--isu-gold);
    margin-bottom: 30px;
  }

  .page-header h1 {
    margin-bottom: 10px;
  }

  .page-header p {
    color: var(--text-medium);
    margin-bottom: 20px;
  }

  .tab-buttons {
    display: flex;
    gap: 10px;
    margin-top: 20px;
    border-top: 2px solid var(--border-light);
    padding-top: 20px;
  }

  .tab-btn {
    flex: 1;
    padding: 12px 20px;
    background: #f5f5f5;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.2s;
    text-align: center;
    text-decoration: none;
    color: var(--text-medium);
  }

  .tab-btn:hover {
    background: #e8e8e8;
  }

  .tab-btn.active {
    background: var(--isu-red);
    color: white;
  }

  .chapter-section {
    background: white;
    padding: 30px;
    border-radius: 8px;
    border: 1px solid var(--border-light);
    margin-bottom: 30px;
    scroll-margin-top: 100px;
  }

  .chapter-section h2 {
    color: var(--isu-red);
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 2px solid var(--isu-gold);
  }

  .chapter-section h3 {
    color: var(--isu-red);
    margin: 25px 0 20px;
    font-size: 1.2em;
  }

  .chapter-section h3 i {
    margin-right: 8px;
  }

  .quiz-answers {
    background: #fff5f5;
    padding: 25px;
    border-radius: 8px;
    border-left: 4px solid var(--isu-red);
    margin-bottom: 30px;
  }

  .answer-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .answer-item {
    background: white;
    padding: 20px;
    border-radius: 6px;
    border-left: 3px solid var(--isu-gold);
  }

  .answer-item h4 {
    color: var(--isu-red);
    margin-bottom: 12px;
  }

  .correct-answer {
    background: #d4f4dd;
    padding: 10px 15px;
    border-radius: 4px;
    margin-bottom: 10px;
    color: #155724;
  }

  .explanation {
    color: var(--text-medium);
    line-height: 1.6;
    margin: 0;
  }

  .downloadable-resources {
    background: #f9f7f4;
    padding: 25px;
    border-radius: 8px;
    border-left: 4px solid var(--isu-gold);
  }

  .resource-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .resource-card {
    background: white;
    padding: 20px;
    border-radius: 8px;
    border: 1px solid var(--border-light);
    display: flex;
    gap: 15px;
    transition: all 0.2s;
  }

  .resource-card:hover {
    box-shadow: 0 4px 12px rgba(196, 30, 58, 0.1);
    border-color: var(--isu-red);
  }

  .resource-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--isu-red), var(--isu-dark-red));
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5em;
    flex-shrink: 0;
  }

  .resource-info {
    flex: 1;
  }

  .resource-info h4 {
    color: var(--isu-red);
    margin-bottom: 5px;
    font-size: 1em;
  }

  .resource-info p {
    color: var(--text-light);
    font-size: 0.9em;
    margin-bottom: 12px;
  }

  .btn-sm {
    padding: 8px 16px;
    font-size: 0.9em;
  }

  .btn-sm i {
    margin-right: 5px;
  }

  .no-resources {
    color: var(--text-light);
    font-style: italic;
    padding: 20px;
    text-align: center;
    background: #f9f7f4;
    border-radius: 6px;
  }

  .additional-section {
    background: white;
    padding: 30px;
    border-radius: 8px;
    border: 2px solid var(--isu-gold);
    margin-bottom: 30px;
    scroll-margin-top: 100px;
  }

  .additional-section h2 {
    color: var(--isu-red);
    margin-bottom: 15px;
  }

  .additional-section h2 i {
    margin-right: 10px;
  }

  .section-description {
    color: var(--text-medium);
    margin-bottom: 25px;
    line-height: 1.6;
  }

  @media (max-width: 968px) {
    .instructor-layout {
      grid-template-columns: 1fr;
    }

    .instructor-sidebar {
      position: static;
    }

    .resource-grid {
      grid-template-columns: 1fr;
    }

    .tab-buttons {
      flex-direction: column;
    }
  }
</style>
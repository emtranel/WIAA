---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Sidebar from '../../../components/Sidebar.astro';
import LessonNav from '../../../components/LessonNav.astro';
import Quiz from '../../../components/Quiz.astro';

import quizRaw from '../../../../public/data/quizzes/03-parts-types.json?raw';
const quizData = JSON.parse(quizRaw);

const chapter = 3;
const lesson = 3;
---

<BaseLayout title="Concept Review">
  <div class="container" style="max-width: 1400px; margin: 30px auto; padding: 0 20px;">
    <div style="display: grid; grid-template-columns: 250px 1fr; gap: 24px; align-items: start;">
      <Sidebar currentChapter={chapter} currentLesson={lesson} />
      <div class="content-area">
        <div class="content-header">
          <p class="chapter-label">Chapter {chapter}: Drone parts & types</p>
          <h1>Concept Review</h1>
        </div>
        <p>Test your understanding with the quiz below:</p>
        <Quiz questions={quizData} />
        <LessonNav 
          prev={{ href: '/drones/03-parts-types/lesson-2', label: 'Previous' }}
          next={{ href: '/drones/04-sensors/lesson-1', label: 'Next' }}
          progress={`${chapter}.${lesson} / 7 Chapters`}
        />
      </div>
    </div>
  </div>
</BaseLayout>
<style>
  .lesson-container {
    max-width: 1400px;
    margin: 20px auto;    /* Mobile spacing */
    padding: 0 15px;      /* Mobile padding */
    width: 100%;
  }

  .lesson-layout {
    display: grid;
    grid-template-columns: 1fr;  /* Single column mobile */
    gap: 16px;
  }

  /* Only breakpoints, NO .content-area styling */
  /* Everything else comes from global.css */

  @media (min-width: 768px) {
    .lesson-container {
      margin: 25px auto;
      padding: 0 20px;
    }
    .lesson-layout {
      gap: 20px;
    }
  }

  @media (min-width: 969px) {
    .lesson-container {
      margin: 30px auto;
    }
    .lesson-layout {
      grid-template-columns: 250px 1fr;
      gap: 24px;
    }
  }
</style>
---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Sidebar from '../../../components/Sidebar.astro';
import LessonNav from '../../../components/LessonNav.astro';
const content = await import('../../../content/drones/02-introduction/lesson-2.md');
const { Content } = content;
const { title, chapter, lesson } = content.frontmatter;
---
<BaseLayout title={title}>
  <div class="container" style="max-width: 1400px; margin: 30px auto; padding: 0 20px;">
    <div style="display: grid; grid-template-columns: 250px 1fr; gap: 24px; align-items: start;">
      <Sidebar currentChapter={chapter} currentLesson={lesson} />
      <div class="content-area">
        <div class="content-header">
          <p class="chapter-label">Chapter {chapter}: Introduction to drones</p>
          <h1>{title}</h1>
        </div>
        <article class="lesson-content">
          <Content />
        </article>
        <LessonNav 
          prev={{ href: '/drones/02-introduction/lesson-1', label: 'Previous' }}
          next={{ href: '/drones/02-introduction/review', label: 'Next' }}
          progress={`${chapter}.${lesson} / 7 Chapters`}
        />
      </div>
    </div>
  </div>
</BaseLayout>
<style is:global>
  :root {
    --isu-red: #c41e3a;
    --isu-gold: #f8c600;
    --border-light: #ddd;
    --text-medium: #333;
    --text-primary: #1a1a1a;
  }
  .lesson-content ul {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)) !important;
    gap: 20px !important;
    list-style: none !important;
    padding: 0 !important;
    margin: 24px 0 !important;
  }
  .lesson-content ul li {
    background: white !important;
    border: 1px solid var(--border-light) !important;
    border-radius: 8px !important;
    padding: 20px !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06) !important;
    transition: all 0.3s ease !important;
  }
  .lesson-content ul li:hover {
    box-shadow: 0 4px 16px rgba(196, 30, 58, 0.12) !important;
    border-color: var(--isu-red) !important;
    transform: translateY(-4px) !important;
  }

  /* Learning Activities */
  .activities-list {
    list-style: none !important;
    padding: 0 !important;
    margin: 24px 0 !important;
    display: block !important;
  }

  .activities-list li {
    background: none !important;
    border: none !important;
    border-radius: 0 !important;
    padding: 0 !important;
    padding-left: 24px !important;
    box-shadow: none !important;
    font-size: 1.05em !important;
    line-height: 1.8 !important;
    color: var(--text-primary) !important;
    margin: 14px 0 !important;
    position: relative !important;
    transition: none !important;
  }

  .activities-list li:hover {
    box-shadow: none !important;
    border-color: transparent !important;
    transform: none !important;
  }

  .activities-list li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: var(--isu-red);
    font-weight: bold;
    font-size: 1.2em;
  }

  .activities-list a {
    color: var(--isu-red);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .activities-list a:hover {
    text-decoration: underline;
    color: #a01729;
  }

  .lesson-content img {
    max-width: 800px !important;
    height: auto !important;
    display: block !important;
    margin: 20px auto !important;
  }

  @media (max-width: 768px) {
    .lesson-content ul {
      grid-template-columns: 1fr !important;
    }
    .lesson-content img {
      max-width: 280px !important;
    }
    div[style*="grid-template-columns"] {
      display: flex !important;
      flex-direction: column-reverse !important;
      gap: 16px !important;
    }
  }
</style>
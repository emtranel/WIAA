---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Sidebar from '../../../components/Sidebar.astro';
import LessonNav from '../../../components/LessonNav.astro';

const content = await import('../../../content/drones/02-introduction/lesson-2.md');
const { Content } = content;
const { title, chapter, lesson } = content.frontmatter;
---

<BaseLayout title={title}>
  <div class="container" style="max-width: 1400px; margin: 30px auto; padding: 0 20px;">
    <div style="display: grid; grid-template-columns: 250px 1fr; gap: 24px; align-items: start;">
      <Sidebar currentChapter={chapter} currentLesson={lesson} />
      <div class="content-area">
        <div class="content-header">
  <div class="page-header-bar">
    <div class="tab-buttons">
      <a href="/WIAA/drones" class="tab-btn active">Learning Module</a>
      <a href="/WIAA/drones/instructor" class="tab-btn">Instructor Resources</a>
    </div>
  </div>
  <p class="chapter-label">Chapter {chapter}: Introduction to drones</p>
          <h1>{title}</h1>
        </div>
        <article class="lesson-content">
          <Content />
        </article>
        <LessonNav 
          prev={{ href: '/drones/02-introduction/lesson-1', label: 'Previous' }}
          next={{ href: '/drones/02-introduction/review', label: 'Next' }}
          progress={`${chapter}.${lesson} / 7 Chapters`}
        />
      </div>
    </div>
  </div>

</BaseLayout>
<style is:global>
  .lesson-content img {
    max-width: 800px !important;
    height: auto !important;
    display: block !important;
    margin: 20px auto !important;
  }

  @media (max-width: 767px) {
    .lesson-content img {
      max-width: 280px !important;
    }
.page-header-bar {
    display: none;
  }

  @media (max-width: 767px) {
    .page-header-bar {
      display: block;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid var(--isu-gold);
    }

    .tab-buttons {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .tab-btn {
      padding: 12px 20px;
      background: #f5f5f5;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.2s;
      text-align: center;
      text-decoration: none;
      color: var(--text-medium);
      font-size: 0.95em;
    }

    .tab-btn:hover {
      background: #e8e8e8;
    }

    .tab-btn.active {
      background: var(--isu-red);
      color: white;
    }
  }
/* Add this CSS to your lesson 2.2 page <style is:global> block */

/* Style Markdown tables to look like cards */
.lesson-content table {
  width: 100%;
  border-collapse: collapse;
  margin: 24px 0;
  background: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.lesson-content table thead {
  background: var(--isu-red);
  color: white;
}

.lesson-content table thead th {
  padding: 16px;
  text-align: left;
  font-weight: 600;
  border: none;
}

.lesson-content table tbody tr {
  border-bottom: 1px solid var(--border-light);
  transition: all 0.3s ease;
}

.lesson-content table tbody tr:hover {
  background: linear-gradient(90deg, rgba(196, 30, 58, 0.05) 0%, rgba(255, 184, 28, 0.05) 100%);
}

.lesson-content table tbody tr:last-child {
  border-bottom: none;
}

.lesson-content table td {
  padding: 16px;
  color: var(--text-medium);
  line-height: 1.6;
}

.lesson-content table strong {
  color: var(--isu-red);
  font-weight: 600;
}

/* Style lists as professional sections */
.lesson-content h3 + ul,
.lesson-content h3 + ol {
  background: white;
  border-radius: 8px;
  padding: 24px 24px 24px 48px;
  margin: 24px 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  border-left: 5px solid var(--isu-red);
}

.lesson-content h3 + ul li,
.lesson-content h3 + ol li {
  margin-bottom: 12px;
  color: var(--text-dark);
  line-height: 1.6;
}

.lesson-content h3 + ul li:last-child,
.lesson-content h3 + ol li:last-child {
  margin-bottom: 0;
}

/* Activity boxes */
.lesson-content h3 {
  color: var(--isu-red);
  margin-top: 30px;
  margin-bottom: 16px;
  font-size: 1.1em;
  border-bottom: 2px solid var(--isu-gold);
  padding-bottom: 10px;
}

/* Strong text in activities */
.lesson-content h3 + p strong {
  color: var(--isu-red);
  display: block;
  margin-bottom: 8px;
}

.lesson-content h3 + p {
  background: linear-gradient(135deg, rgba(196, 30, 58, 0.08) 0%, rgba(255, 184, 28, 0.08) 100%);
  border-left: 5px solid var(--isu-red);
  border-radius: 6px;
  padding: 16px 20px;
  margin-bottom: 20px;
  color: var(--text-dark);
  line-height: 1.7;
}

/* Responsive adjustments */
@media (max-width: 767px) {
  .lesson-content table {
    font-size: 0.9em;
  }

  .lesson-content table td,
  .lesson-content table th {
    padding: 12px;
  }

  .lesson-content h3 + ul,
  .lesson-content h3 + ol {
    padding: 16px 16px 16px 40px;
  }
}

@media (min-width: 768px) {
  .lesson-content table {
    margin: 32px 0;
  }

  .lesson-content table td {
    padding: 20px;
  }

  .lesson-content h3 + ul,
  .lesson-content h3 + ol {
    padding: 28px 28px 28px 52px;
  }
}
</style>
<style>
  @media (max-width: 768px) {
    div[style*="grid-template-columns"] {
      display: flex !important;
      flex-direction: column-reverse !important;
      gap: 16px !important;
    }
  }
</style>
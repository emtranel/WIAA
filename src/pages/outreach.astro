---

<BaseLayout title="Outreach">
  <div class="outreach-hero">
    <div class="container">
      <h1>WIAA Outreach Initiatives</h1>
      <p>Connecting students with real-world agricultural and technology education</p>
    </div>
  </div>

  <div class="container page-content">
    
    <!-- Events with Photos -->
    <section class="events-section">
      <h2>Recent Events & Workshops</h2>
      
      {eventsWithPhotos.map(event => (
        <div class={`event-card with-photos ${event.photos.length === 1 ? 'side-layout' : ''}`}>
          <div class="event-text">
            <div class="event-header">
              <h3>{event.title}</h3>
              <span class="event-date">{event.date}</span>
            </div>
            <p class="event-description">{event.description}</p>
            <div class="event-meta">
              <div class="meta-item">
                <i class="fas fa-users"></i>
                <span><strong>{event.attendees}</strong> attendees</span>
              </div>
              <div class="meta-item">
                <i class="fas fa-user-group"></i>
                <span>{event.audience}</span>
              </div>
            </div>
          </div>
          
          <div class={`photo-gallery ${event.photos.length === 1 ? 'compact' : ''}`}>
            {event.photos.map(photo => (
              <div class="photo-item">
                <img src={photo.src} alt={`${event.title} photo`} />
                {photo.caption && (
                  <p class="photo-caption">{photo.caption}</p>
                )}
              </div>
            ))}
          </div>
        </div>
      ))}
    </section>

    <!-- Events without Photos -->
    <section class="events-section">
      <h2>Additional Outreach Activities</h2>
      
      <div class="simple-events-grid">
        {eventsNoPhotos.map(event => (
          <div class="event-card simple">
            <div class="event-icon">
              <i class="fas fa-calendar-check"></i>
            </div>
            <div class="event-info">
              <h3>{event.title}</h3>
              <span class="event-date">{event.date}</span>
              <p class="event-description">{event.description}</p>
              <div class="event-meta">
                <div class="meta-item">
                  <i class="fas fa-users"></i>
                  <span><strong>{event.attendees}</strong> attendees</span>
                </div>
                <div class="meta-item">
                  <i class="fas fa-user-group"></i>
                  <span>{event.audience}</span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- CTA Section -->
    <div class="cta-box">
      <h3>Get Involved</h3>
      <p>Interested in bringing WIAA programming to your school or organization?</p>
      <a href="/contact" class="btn btn-primary">Contact Us</a>
    </div>
  </div>
</BaseLayout>

<style>
  .outreach-hero {
    background: linear-gradient(135deg, var(--isu-red), var(--isu-dark-red));
    color: white;
    padding: 80px 20px;
    text-align: center;
    margin-bottom: 40px;
  }

  .outreach-hero h1 {
    font-size: 2.8em;
    font-weight: 600;
    margin-bottom: 10px;
    color: white;
  }

  .outreach-hero p {
    font-size: 1.1em;
    opacity: 0.95;
  }

  .page-content {
    padding: 0 20px 60px;
  }

  .events-section {
    margin-bottom: 60px;
  }

  .events-section h2 {
    color: var(--isu-red);
    font-size: 2em;
    margin-bottom: 30px;
    padding-bottom: 15px;
    border-bottom: 3px solid var(--isu-gold);
  }

  /* Event Cards with Photos */
  .event-card.with-photos {
    background: white;
    padding: 30px;
    border-radius: 8px;
    border: 2px solid var(--border-light);
    margin-bottom: 40px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  /* Side layout for single photo only */
  .event-card.side-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 30px;
    align-items: start;
  }

  .event-text {
    min-width: 0;
  }

  .event-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 15px;
    flex-wrap: wrap;
    gap: 10px;
  }

  .event-card h3 {
    color: var(--isu-red);
    font-size: 1.5em;
    margin: 0;
  }

  .event-date {
    color: var(--text-light);
    font-weight: 600;
    font-size: 0.95em;
  }

  .event-description {
    color: var(--text-medium);
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .event-card.side-layout .event-description {
    margin-bottom: 20px;
  }

  /* Event Meta Info */
  .event-meta {
    display: flex;
    gap: 25px;
    flex-wrap: wrap;
    padding-top: 15px;
    border-top: 1px solid var(--border-light);
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text-medium);
    font-size: 0.95em;
  }

  .meta-item i {
    color: var(--isu-red);
    font-size: 1.1em;
  }

  .meta-item strong {
    color: var(--isu-red);
  }

  /* Photo gallery - grid for 2+ photos */
  .photo-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 15px;
  }

  /* Compact layout for single photo */
  .photo-gallery.compact {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .photo-item {
    border-radius: 8px;
    overflow: hidden;
    border: 2px solid var(--border-light);
    transition: all 0.3s;
  }

  .photo-item:hover {
    border-color: var(--isu-gold);
    transform: translateY(-4px);
    box-shadow: 0 6px 16px rgba(196, 30, 58, 0.15);
  }

  .photo-item img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }

  .photo-caption {
    padding: 10px;
    background: #f9f7f4;
    color: var(--text-medium);
    font-size: 0.9em;
    font-style: italic;
    text-align: center;
    margin: 0;
  }

  /* Simple Event Cards (No Photos) */
  .simple-events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  .event-card.simple {
    background: white;
    padding: 25px;
    border-radius: 8px;
    border: 2px solid var(--border-light);
    display: flex;
    gap: 20px;
    transition: all 0.3s;
  }

  .event-card.simple:hover {
    border-color: var(--isu-gold);
    box-shadow: 0 4px 12px rgba(196, 30, 58, 0.1);
  }

  .event-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--isu-red), var(--isu-dark-red));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5em;
    flex-shrink: 0;
  }

  .event-info {
    flex: 1;
  }

  .event-card.simple h3 {
    color: var(--isu-red);
    font-size: 1.2em;
    margin: 0 0 8px 0;
  }

  .event-card.simple .event-date {
    display: block;
    margin-bottom: 10px;
  }

  .event-card.simple .event-description {
    margin: 0 0 15px 0;
    font-size: 0.95em;
  }

  .event-card.simple .event-meta {
    border-top: none;
    padding-top: 0;
    gap: 20px;
  }

  /* CTA Box */
  .cta-box {
    background: linear-gradient(135deg, #fff5f5, #ffe8e8);
    padding: 40px;
    border-radius: 8px;
    border: 2px solid var(--isu-gold);
    text-align: center;
    margin-top: 60px;
  }

  .cta-box h3 {
    color: var(--isu-red);
    margin-bottom: 15px;
    font-size: 1.8em;
  }

  .cta-box p {
    margin-bottom: 25px;
    color: var(--text-medium);
    font-size: 1.1em;
  }

  @media (max-width: 768px) {
    .outreach-hero h1 {
      font-size: 2em;
    }

    .event-card.side-layout {
      grid-template-columns: 1fr;
    }

    .photo-gallery {
      grid-template-columns: 1fr;
    }

    .simple-events-grid {
      grid-template-columns: 1fr;
    }

    .event-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .event-card.simple {
      flex-direction: column;
      text-align: center;
    }

    .event-icon {
      margin: 0 auto;
    }

    .event-meta {
      justify-content: center;
    }
  }
</style>
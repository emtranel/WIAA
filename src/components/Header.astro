---
const currentPath = Astro.url.pathname;
---

<header class="navbar">
  <div class="nav-container">
    <a href="/" class="logo-link">
      <div class="logo-icon">WIAA</div>
      <span class="logo-text">Workforce in Agriculture and AI</span>
    </a>
    
    <button class="mobile-menu-btn" aria-label="Toggle menu" id="mobile-menu-btn">
      <i class="fas fa-bars"></i>
    </button>
    
    <nav class="desktop-nav" id="nav-menu">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
      <a href="/drones" class={currentPath.startsWith('/drones') ? 'active' : ''}>Drone program</a>
      <a href="/rovers" class={currentPath.startsWith('/rovers') ? 'active' : ''}>Rover program</a>
      <a href="/outreach" class={currentPath === '/outreach' ? 'active' : ''}>Outreach</a>
    </nav>
  </div>
</header>

<style>
  .navbar {
    height: 70px;
    width: 100%;
    border-bottom: 3px solid var(--isu-gold);
    background: white;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(196, 30, 58, 0.08);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30px;
  }

  .logo-link {
    display: flex;
    align-items: center;
    color: var(--isu-red);
    font-weight: 700;
    font-size: 1.3em;
    text-decoration: none;
    transition: color 0.2s;
  }

  .logo-link:hover {
    color: var(--isu-dark-red);
  }

  .logo-icon {
    background: linear-gradient(135deg, var(--isu-red), var(--isu-dark-red));
    color: white;
    padding: 10px 14px;
    border-radius: 6px;
    margin-right: 12px;
    font-weight: 700;
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    font-size: 1.5em;
    color: var(--isu-red);
    cursor: pointer;
    padding: 10px;
  }

  .desktop-nav {
    display: flex;
    gap: 8px;
  }

  .desktop-nav a {
    padding: 10px 16px;
    color: var(--text-medium);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s;
    border-radius: 4px;
  }

  .desktop-nav a:hover {
    color: var(--isu-red);
    background: rgba(196, 30, 58, 0.05);
  }

  .desktop-nav a.active {
    color: var(--isu-red);
    border-bottom: 3px solid var(--isu-gold);
    font-weight: 600;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .logo-text {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }

    .desktop-nav {
      position: absolute;
      top: 70px;
      left: 0;
      right: 0;
      background: white;
      flex-direction: column;
      gap: 0;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      display: none;
    }

    .desktop-nav.open {
      display: flex;
    }

    .desktop-nav a {
      padding: 15px 30px;
      border-radius: 0;
      border-bottom: 1px solid var(--border-light);
    }

    .desktop-nav a.active {
      border-bottom: 1px solid var(--isu-gold);
      background: rgba(196, 30, 58, 0.05);
    }
  }
</style>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const navMenu = document.getElementById('nav-menu');

  if (mobileMenuBtn && navMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      navMenu.classList.toggle('open');
    });

    // Close menu when clicking a link
    const navLinks = navMenu.querySelectorAll('a');
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        navMenu.classList.remove('open');
      });
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!mobileMenuBtn.contains(e.target) && !navMenu.contains(e.target)) {
        navMenu.classList.remove('open');
      }
    });
  }
</script>